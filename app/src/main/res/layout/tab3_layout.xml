<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="341dp"
        android:layout_height="54dp"
        android:background="@color/my_color1"
        android:gravity="center"
        android:text="-배달음식 인원모집 공고-"
        android:fontFamily="@font/binggrae2_bold"
        android:textColor="@color/my_color2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <View
        android:id="@+id/vertical_guide_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add_menu_button"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:backgroundTint="@color/my_color2"
        android:fontFamily="@font/binggrae2_bold"
        android:text="먹고 싶은 메뉴 추가하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertical_guide_line2"
        app:layout_constraintVertical_bias="0.015" />


    <Button
        android:id="@+id/delete_menu_button"
        android:layout_width="87dp"
        android:layout_height="49dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:background="@color/white"
        android:backgroundTint="@color/my_color4"
        android:fontFamily="@font/binggrae2_bold"
        android:text="내가 추가한\n메뉴 삭제"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/menu_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/add_menu_button"
        app:layout_constraintTop_toBottomOf="@+id/vertical_guide_line2"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_refresh"
        android:tint="@color/colorSecondaryText"
        app:layout_constraintBottom_toTopOf="@+id/menu_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/delete_menu_button"
        app:layout_constraintTop_toBottomOf="@+id/vertical_guide_line2"
        app:layout_constraintVertical_bias="0.5" />

    <ListView
        android:id="@+id/menu_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_menu_button"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/floating_bottom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />


</androidx.constraintlayout.widget.ConstraintLayout>