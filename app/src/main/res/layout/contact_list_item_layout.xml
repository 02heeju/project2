<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:layout_constraintVertical_chainStyle="spread"
    android:background="#CDCDCD"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/contact_list_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:src="@drawable/parrot" />

    <TextView
        android:id="@+id/contact_list_item_name"
        app:layout_constraintLeft_toRightOf="@id/contact_list_item_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contact_list_item_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:maxWidth="200dp"
        android:text="contact_list_item_name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines="1" />

    <TextView
        android:id="@+id/contact_list_item_phoneNumber"
        app:layout_constraintLeft_toRightOf="@id/contact_list_item_image"
        app:layout_constraintTop_toBottomOf="@id/contact_list_item_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:maxWidth="200dp"
        android:text="contact_list_item_phoneNumber"
        android:textSize="12sp"
        android:textStyle="normal"
        android:maxLines="1" />

</androidx.constraintlayout.widget.ConstraintLayout>