<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color1"
    android:layout_margin="4dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/menu"
        android:layout_width="113dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="엽기\n떡볶이"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@color/colorAccent"

        android:fontFamily="@font/ngbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/party"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:fontFamily="@font/ngbold"
        android:text="@string/additional_text"
        android:background="@color/main_color"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu"
        app:layout_constraintTop_toTopOf="@+id/menu"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ngbold"

        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:text="18:00pm"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/owner_name"
        app:layout_constraintTop_toTopOf="@+id/owner_name" />

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ngbold"

        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:text="희주"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/party"
        app:layout_constraintTop_toTopOf="@+id/menu" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="133dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/serious"
        android:gravity="center"
        android:text="고기 뿌수러 갈사랍 급구"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/party"
        app:layout_constraintTop_toBottomOf="@+id/owner_name"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/number_of_people"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:fontFamily="@font/ngbold"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:background="@color/my_color2"
        android:gravity="center"
        android:padding="10dp"
        android:text="3/4"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toEndOf="@+id/owner_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>