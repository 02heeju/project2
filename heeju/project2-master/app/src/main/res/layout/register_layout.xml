<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    tools:context=".login_activity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:fontFamily="@font/binggrae2_bold"
        android:hint="이름을 입력하세요"
        android:textColor="@color/my_color4"
        app:met_baseColor="@color/my_color"
        app:met_textColorHint="@color/my_color2"
        app:met_primaryColor="@color/my_color"
        app:met_iconPadding="0dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/binggrae2_bold"
        app:met_textColorHint="@color/my_color3"
        android:textColor="@color/my_color4"
        android:hint="이메일을 입력하세요"
        app:met_baseColor="@color/my_color"
        app:met_primaryColor="@color/my_color" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/binggrae2_bold"
        app:met_textColorHint="@color/my_color4"
        android:textColor="@color/my_color3"
        android:hint="비밀번호를 입력하세요"
        app:met_baseColor="@color/my_color"
        app:met_primaryColor="@color/my_color" />

</LinearLayout>
